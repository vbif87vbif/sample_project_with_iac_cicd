global:
  scrape_interval: "30s"
  evaluation_interval: 5s
  external_labels:
    env: 'production'
scrape_configs:
  - job_name: node-exporter-prometheus
    scrape_interval: 15s
    metrics_path: /metrics
    static_configs:
    - targets: ['localhost:9100']
  - job_name: node-exporter
    scrape_interval: 15s
    metrics_path: /metrics
    static_configs:
    - targets: ['localhost:9101']